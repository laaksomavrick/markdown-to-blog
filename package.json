{
    "name": "md2blog",
    "version": "0.2.0",
    "description": "A dead simple blog oriented static site generator",
    "author": "Mavrick Laakso <laakso.mavrick@gmail.com>",
    "license": "MIT",
    "engines": {
        "node": "10"
    },
    "main": "build/index.js",
    "files": [
        "build/**/*"
    ],
    "bin": {
        "md2blog": "build/index.js"
    },
    "scripts": {
        "main": "ts-node index.ts",
        "lint": "tslint --project .",
        "format": "prettier --write \"cmd/**/*.ts\" \"lib/**/*.ts\"",
        "test": "jest --config jest.config.js",
        "build": "rm -rf ./build && tsc",
        "copy-example": "cp -r example build/example",
        "prepare": "yarn build && yarn copy-example",
        "prepublishOnly": "yarn test && yarn lint",
        "preversion": "yarn lint",
        "version": "yarn format && git add .",
        "postversion": "git push && git push --tags"
    },
    "devDependencies": {
        "@types/commander": "^2.12.2",
        "@types/common-tags": "^1.8.0",
        "@types/convict": "^4.2.1",
        "@types/ejs": "^2.6.3",
        "@types/fs-extra": "^8.0.0",
        "@types/jest": "^24.0.15",
        "@types/js-yaml": "^3.12.1",
        "@types/mkdirp": "^0.5.2",
        "@types/node": "^12.6.2",
        "@types/showdown": "^1.9.3",
        "jest": "^24.8.0",
        "memfs": "^2.15.5",
        "prettier": "^1.18.2",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "tslint": "^5.18.0",
        "typescript": "^3.5.3",
        "typescript-tslint-plugin": "^0.5.4"
    },
    "dependencies": {
        "commander": "^2.20.0",
        "common-tags": "^1.8.0",
        "convict": "^6.2.4",
        "ejs": "^2.6.2",
        "fs-extra": "^8.1.0",
        "js-yaml": "^3.13.1",
        "mkdirp": "^0.5.1",
        "showdown": "^1.9.0"
    }
}
