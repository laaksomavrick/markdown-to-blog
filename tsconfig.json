{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin" ,
        "configFile": "./tslint.json",
      }
    ],
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
